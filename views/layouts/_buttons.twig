{#
 generate the definition for the buttons
 uses:  
		- form.buttons: the button definition
		- formId: the id of the form to store (for submitting)
		- isAjax: the call is made as an ajax call
		- state: edit | view
		- this.model: to get information about the model (new/edit)

 the definition of the button is defined in BaseController->button
#}
{% set state = state | default('edit') %}
{% for key, button in form.buttons[state] %}
	{% if button.type == 'submit' %}	
		<button class="{{ button.style | default('btn') }} {{ button.position }} id-{{ util.formId(form) }}" {{ button.options |raw }} type="submit">{% if button.label %}{{ this.te(button.label) }}{%else%}{% if this.model.isNewRecord %}{{ this.t('btn-create') }} {% else %}{{ this.t('btn-save') }} {% endif %}{% endif %}</button>
		{{ this.onReady("\n\t"~'$(".id-'~util.formId(form)~'").on("click", function() { $(".cls-'~util.formId(form)~'").submit(); }); ') }}
	{% elseif button.type == 'cancel' %}	
		{% if isAjax %}
		<button  href="#" id="btn-cancel" class="{{ button.style |default('btn') }} {{ button.position }} action-close" data-dismiss="modal" {{ button.options |raw }} type="button">{{ this.t(button.label) }}</button>											
		{% else %}
		<button class="{{ button.style|default('btn') }} {{ button.position }}" {{ button.options |raw }} onClick="history.go(-1);return true;">{{ this.t(button.label) }}</button>							
		{% endif %}		
	{% elseif button.type == 'delete' %}	
		<button class="{{ button.style |default('btn') }} {{ button.position }}" {{ button.options |raw }} onClick="if (confirm('{{ (button.ask) | default(this.te('Delete this information?')) }}')) { window.location='{{ button.url }}'; }">{{ this.t(button.label)}}</button>							
{#		
	{% elseif element.type == 'link' %}
		<br/><br /><a href="{{element.url}}">{{element.label}}</a>
#}
	{% elseif button.type == 'dialog' %}
		<button type="button" class="{{ button.style | default('btn') }} {{ button.position }} btn-action menu-modal" data-url="{{ button.url }}" {{ button.options |raw }}>{{ this.t(button.label) |raw }}</button>		
	{% else %}	
		<a href="{{ button.url }}" class="{{ button.style | default('btn') }} {{ button.position }}" {{ button.options |raw }}>{{ this.t(button.label) }}</a>	
	{% endif %}
{% endfor %}
		
	